<article class="col d-flex flex-column">
  <div class="card p-3 flex-grow-1">
    <%= link_to post_path(post), class: "ratio ratio-16x9 mb-3" do %>
      <%= image_tag post.featured_image, class: "card-img-top img-fluid" %>
    <% end %>
    <div class="card-body p-3">
      <div class="small text-primary fw-black mb-2"><%= post.category.title %></div>
      <h3 class="h4 mb-3"><%= link_to post.title.html_safe, post_path(post), class: "link-dark text-decoration-none" %></h3>
      <p class="mb-0"><%= post.excerpt.truncate(122, separator: " ") %></p>
    </div>
  </div>
</article>
