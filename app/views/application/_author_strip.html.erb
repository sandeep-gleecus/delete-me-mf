<% object = @recipe || @post %>
<% sharing ||= false %>

<div class="row justify-content-md-between align-items-center gy-4 gy-md-0 mb-5 mb-xl-6">
  <div class="col-md-auto">
    <div class="d-flex align-items-center">
      <%= image_tag object.user.attached_avatar_path, class: "avatar me-4" %>
      <p class="text-dark fw-bold mb-0"><%= object.user.name %></p>
    </div>
  </div>
  <% if sharing %>
    <div class="col-md-auto ms-auto">
      <div class="small mb-3">Share this article</div>
      <div class="d-flex">
        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" rel="noopener" class="link-facebook x-large lh-1 me-3">
          <%= icon "fab", "facebook-f", aria: {hidden: true} %>
          <span class="visually-hidden">Share on Facebook</span>
        </a>
        <a href="https://twitter.com/intent/tweet?text=<%= request.original_url %>" target="_blank" rel="noopener" class="link-twitter x-large lh-1 me-3">
          <%= icon "fab", "twitter", aria: {hidden: true} %>
          <span class="visually-hidden">Share on Twitter</span>
        </a>
        <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= request.original_url %>" target="_blank" rel="noopener" class="link-linkedin x-large lh-1 me-3">
          <%= icon "fab", "linkedin", aria: {hidden: true} %>
          <span class="visually-hidden">Share on Linkedin</span>
        </a>
        <a href="https://www.reddit.com/submit?url=<%= request.original_url %>" target="_blank" rel="noopener" class="link-reddit x-large lh-1 me-3">
          <%= icon "fab", "reddit", aria: {hidden: true} %>
          <span class="visually-hidden">Share on Reddit</span>
        </a>
        <a href="https://api.whatsapp.com/send?text=<%= request.original_url %>" target="_blank" rel="noopener" class="link-whatsapp x-large lh-1">
          <%= icon "fab", "whatsapp", aria: {hidden: true} %>
          <span class="visually-hidden">Share on WhatsApp</span>
        </a>
      </div>
    </div>
  <% else %>
    <div class="col-md-auto">
      <%= post_date(object.created_at) %>
    </div>
  <% end %>
</div>
