          <%= render partial: "card", locals: {title: "Breathwork", image_path: "classes/breathwork.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Core", image_path: "classes/core.jpg", is_slider_item: true, classes: "h-100"} %>
        <% elsif controller.action_name == "beyond" %>
          <%= render partial: "card", locals: {title: "Upper body", image_path: "classes/upper-body-1.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Lower body", image_path: "classes/lower-body.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "HIIT", image_path: "classes/hiit.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Full body workout", image_path: "classes/full-body.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Breathwork", image_path: "classes/breathwork.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Yoga", image_path: "classes/yoga.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Core", image_path: "classes/core.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Arms and abs", image_path: "classes/arms-and-abs.jpg", is_slider_item: true, classes: "h-100"} %>
        <% end %>
