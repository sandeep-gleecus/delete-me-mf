<section class="bg-primary-light py-6 py-lg-7 py-xxl-8">
  <div class="container-xl">
    <div class="row text-center justify-content-center gy-0 mb-5 mb-lg-6 mb-xl-7">
      <div class="col-lg-20 col-xl-18">
        <h2 class="<%= "mb-0" unless local_assigns[:text] %>"><%= heading %></h2>
        <%= "<p class='lead-xl mb-0'>#{text}</p>".html_safe if local_assigns[:text] %>
      </div>
    </div>
  </div>
