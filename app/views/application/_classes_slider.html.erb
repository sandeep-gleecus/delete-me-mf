          <%= render partial: "card", locals: {title: "Meditation", image_path: "classes/meditation.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Resistance bands", image_path: "classes/resistance-bands.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Breathwork", image_path: "classes/breathwork-2.jpg", is_slider_item: true, classes: "h-100"} %>
        <% elsif controller.action_name == "postpartum" %>
          <%= render partial: "card", locals: {title: "Upper body", image_path: "classes/upper-body-1.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Lower body", image_path: "classes/lower-body.jpg", is_slider_item: true, classes: "h-100"} %>
