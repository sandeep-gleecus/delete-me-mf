    <div class="splide__track">
      <ul class="splide__list">
        <% if controller.action_name == "pregnancy" %>
          <%= render partial: "card", locals: {title: "Upper body", image_path: "classes/upper-body.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Lower body", image_path: "classes/lower-body.jpg", is_slider_item: true, classes: "h-100"} %>
          <%= render partial: "card", locals: {title: "Pilates", image_path: "classes/pilates.jpg", is_slider_item: true, classes: "h-100"} %>
