<% meta title: "Dashboard - Food Entry" %>
<% @page_title = "Food Entries" %>

<section class="bg-white rounded-2 shadow p-4">
  <div class="row g-0">
    <div class="col-auto mb-4 order-1 me-3 me-md-4">
      <div class="tile tile-primary tile-xl flex-column me-auto">
        <div class="h5 text-primary mb-0"><%= @food_entry.date.day %></div>
        <div class="small text-dark fw-bold"><%= @food_entry.date.strftime("%b") %></div>
      </div>
    </div>
    <div class="col-auto col-md-24 col-xl-15 col-xxl-11 order-3 order-xl-2">
      <h2 class="h5 mb-2"><%= @food_entry.title %></h2>
      <%= convert_to_badge(:calories_consumed, @food_entry.calories_consumed, "mb-3") %>
    </div>
    <div class="col-auto d-flex flex-row ms-auto ms-xxl-0 order-2 order-xl-3">
      <%= link_to "#{icon "fas", "edit", class: "me-2"}Edit".html_safe, edit_dashboard_food_entry_path(@food_entry), class: "btn btn-link shadow-none border-0 me-md-3" %>
      <%= link_to "#{icon "fas", "trash", class: "me-2"}Delete".html_safe, dashboard_food_entry_path(@food_entry), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link text-danger shadow-none border-0" %>
    </div>
  </div>
</section>
