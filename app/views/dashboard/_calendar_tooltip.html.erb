<div class="card-tooltip card rounded-2 shadow-lg d-inline-block p-0">
  <div data-popper-arrow class="card-tooltip-calendar-arrow"></div>
  <div class="card-body p-3">
    <div class="row gy-3">
      <% lessons.each do |lesson| %>
        <div class="d-flex align-items-center">
          <%= link_to dashboard_lesson_path(lesson), class: "me-3" do %>
            <% if lesson.try(:video?) %>
              <%#= tag.div icon("fas", "play"), class: "btn btn-primary btn-square" %>
              <!--<div class="badge badge-sm bg-primary position-absolute end-0 mt-1 me-1"><%= lesson.try(:duration) %></div>-->
            <% end %>
            <%= image_tag resize_to_small_image(lesson.featured_image), width: 60, class: "rounded-1 d-md-none" %>
            <%= image_tag resize_to_small_image(lesson.featured_image), width: 80, class: "rounded-1 d-none d-md-block" %>
          <% end %>
          <p class="mb-0">
            <%= link_to lesson.title, dashboard_lesson_path(lesson), class: "h6 text-dark small text-primary lh-sm d-block mb-1" %>
            <%= convert_to_badge(:time_live, lesson.start_time.strftime("%l:%M%P"), "badge-sm me-1") %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
