<% meta title: "Dashboard - Journal" %>
<% @page_title = "Journal" %>

<section class="bg-white rounded-2 shadow p-4">
  <div class="row g-0">
    <div class="col-auto mb-4 order-1 me-3 me-md-4">
      <div class="tile tile-primary tile-xl flex-column me-auto">
        <div class="h5 text-primary mb-0"><%= @journal_entry.date.day %></div>
        <div class="small text-dark fw-bold"><%= @journal_entry.date.strftime("%b") %></div>
      </div>
    </div>
    <div class="col-auto col-xl-15 col-xxl-11 order-3 order-xl-2">
      <h2 class="h5 mb-2"><%= @journal_entry.title %></h2>
      <p class="lead mb-3"><%= @journal_entry.description %></p>
      <%= image_tag resize_to_small_image(@journal_entry.featured_image), class: "img-fluid rounded-2 d-md-none" if @journal_entry.featured_image.attached? %>
      <%= image_tag resize_to_medium_image(@journal_entry.featured_image), class: "img-fluid rounded-2 d-none d-md-block" if @journal_entry.featured_image.attached? %>
    </div>
    <div class="col-auto d-flex flex-row ms-auto ms-xxl-0 order-2 order-xl-3">
      <%= link_to "#{icon "fas", "edit", class: "me-2"}Edit".html_safe, edit_dashboard_journal_entry_path(@journal_entry), class: "btn btn-link shadow-none border-0 me-md-3" %>
      <%= link_to "#{icon "fas", "trash", class: "me-2"}Delete".html_safe, dashboard_journal_entry_path(@journal_entry), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link text-danger shadow-none border-0" %>
    </div>
  </div>
</section>
