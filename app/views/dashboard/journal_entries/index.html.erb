<% meta title: "Dashboard - Journal" %>
<% @page_title = "Journal" %>

<section class="bg-white rounded-2 shadow p-4">
  <div class="row gy-0">
    <div class="col-xxl-16">
      <div class="d-flex justify-content-between mb-3 mb-md-4">
        <h2 class="h5 mb-0">Recent</h2>
        <%= link_to "New#{icon "fas", "plus", class: "x-small ms-2"}".html_safe, new_dashboard_journal_entry_path, class: "btn btn-link btn-sm shadow-none border-0 p-0" %>
      </div>
      <div class="row row-cols-1 gy-4">
        <% if @journal_entries.exists? %>
          <%= render @journal_entries %>
        <% else %>
          <p class="small mb-0">You have no journal entries. You can add one <%= link_to "here.", new_dashboard_journal_entry_path %></p>
        <% end %>
      </div>
    </div>
  </div>
</section>
