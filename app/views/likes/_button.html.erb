<% if current_user.likes.exists?(likeable: likeable) %>
  <%= form_with(model: [:dashboard, likeable, current_user.likes.find_by(likeable: likeable)], method: :delete, local: true) do |f| %>
    <%= f.button "#{icon "fas", "thumbs-up", class: "me-2"}#{likeable.likes.count}".html_safe, class: "btn btn-link border-0 shadow-none p-0 d-flex align-items-center" %>
  <% end %>
<% else %>
  <%= form_with(model: [:dashboard, likeable, current_user.likes.build], local: true) do |f| %>
    <%= f.button "#{icon "far", "thumbs-up", class: "me-2"}#{likeable.likes.count}".html_safe, class: "btn btn-link border-0 shadow-none p-0 d-flex align-items-center" %>
  <% end %>
<% end %>
