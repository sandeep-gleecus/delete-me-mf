<% meta title: "Change Your Password" %>
<% @minimal_layout = true %>

<section class="container-xl">
  <div class="row justify-content-center">
    <div class="col-md-13 col-lg-10 col-xl-8">
      <%= render "layouts/alerts" %>
      <h1 class="h4 text-center">Change your password</h1>
      <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), validate: true, html: {method: :put, class: "js-form"} do |f| %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.input :password, label: false, wrapper_html: {class: "mb-3"}, input_html: {placeholder: "New Password", autocomplete: "new-password"} %>
        <%= f.input :password_confirmation, label: false, wrapper_html: {class: "mb-4"}, input_html: {placeholder: "Confirm new password", autocomplete: "new-password"} %>
        <%= f.button :submit, "Change password", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</section>
