<% meta title: "Forgot Password" %>
<% @minimal_layout = true %>

<section class="container-xl">
  <div class="row justify-content-center mb-5 mb-md-6 mb-xl-7">
    <div class="col-md-13 col-lg-10 col-xl-8">
      <%= render "layouts/alerts" %>
      <h1 class="h4">Forgot your password?</h1>
      <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), validate: true, html: {class: "js-form"} do |f| %>
        <%= f.input :email, wrapper_html: {class: "mb-4"}, input_html: {placeholder: "Email address", autocomplete: "email"} %>
        <%= f.button :submit, "Reset", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
  <div class="text-center">Donâ€™t have an account? <%= link_to "Join for free", new_registration_path(resource_name), class: "" %></div>
</section>
